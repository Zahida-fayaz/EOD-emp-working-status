<% layout ('layouts/boilerplate') %>
    <div class="container mb-3 mt-3">
        <form class="registration shadow-lg">
            <h2 class="text-success">Registration Form</h2>

            <div class="form-group mt-3 ">
                <label for="name" class="form-label"> Name:</label>
                <input type="text" name="fullname" class="form-control" placeholder="" required>
            </div>

            <div class="form-group mt-3 mr-5">

                <label for="email" class="form-label" text success> Offical E-mail: </label>

                <input type="email" name="email" class="form-control" placeholder="" required>
            </div>
            <div class="form-group mt-3">
                <label for="number" class="form-label"> Mobile Number: </label>

                <input type="number" name="mobilenumber" class="form-control" placeholder="" required>
            </div>
            <div class="form-group mt-3">
                <label for="designation" class="form-label">Designation: </label>

                <input type="text" name="designation" class="form-control " placeholder="" required>
            </div>
            <div class="form-group mt-3">
                <label for="name" class="form-label"> Address: </label>

                <input type="text" name="address" class="form-control" placeholder="" required>
            </div>
            <div class="form-group mt-3">
                <label for="checkbox">

                    <input type="checkbox" name="">
                    I accept the <a href="#"> terms of use</a> &<a href=""> privacy
                            policy</a></label>
            </div>
            <div class=" mt-3 ">
                <input type="Submit" class="btn btn-success w-75% " name="" value="submit">
            </div>
        </form>
    </div>